@{
	ViewData["Title"] = "Vendor_Page";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h1>Vendor_Page</h1>


<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
</head>
<body>
	<div class="content-wrapper">
		<div class="container-full">
			<div class="content-header">
				<div class="d-flex align-items-center">




					<div class="mr-auto" style="margin-top: -136px;">
						<h3 class="page-title">Vendor Information</h3>
						<div class="d-inline-block align-items-center">
							<nav>
								<ol class="breadcrumb">
									<li class="breadcrumb-item"><a href="#"><i class="mdi mdi-home-outline"></i></a></li>
									<li class="breadcrumb-item" aria-current="page">Vendor Information</li>
								</ol>




							</nav>
						</div>
					</div>


					<div class="mr-auto" style="margin-top: -98px;" @* style=" margin-top: -104px; margin-left: 540px; *@">
						<li class="btn-group nav-item d-none d-xl-inline-block">
							<div class="app-menu">
								<div class="search-bx mx-5">

									<div class="input-group">
										<input type="search" class="form-control" id="txtsearch" placeholder="Search" oninput="ShowDataInTable()" aria-label="Search" style="    width: 300px;
	margin-left: 433px;" aria-describedby="button-addon2">
										<div class="input-group-append">
											<button class="btn" type="submit" id="btnsearch" onclick="ProductList()"></button>
										</div>
									</div>

								</div>
							</div>
						</li>
					   </div>
					




				</div>
			</div>
			<!--Main content-->
			<section class="content" style="    margin-top: -35px;">
				<div class="row">
					<div class="col-12">
						<div class="box">
							<div class="box-body">
								<form action="#">
									<div class="form-body">
										<input type="hidden" id="id" value="0" />
										<div class="row">
											<div class="col-md-6">
												<div class="form-group">
													<label class="font-weight-700 font-size-16" for="txtvendername">Vendor Name</label>
													<input type="text" class="form-control" id="txtvendername" />
												</div>
											</div>
											<div class="col-md-6">
												<div class="form-group">
													<label class="font-weight-700 font-size-16" for="txtvenderemail">Vendor Email</label>
													<input type="text" class="form-control" id="txtvenderemail" />
												</div>
											</div>
										</div>
										<div class="row">
											<div class="col-md-6">
												<div class="form-group">
													<label class="font-weight-700 font-size-16" for="txtvendermobile">Vendor Mobile No</label>
													<input type="text" class="form-control" id="txtvendermobile" />
												</div>
											</div>
											<div class="col-md-6">
												<div class="form-group">
													<label class="font-weight-700 font-size-16" for="txtvenderadd">Vendor Address</label>
													<input type="text" class="form-control" id="txtvenderadd" />
												</div>
											</div>
										</div>
										<div class="row">
											<div class="col-md-6">
												<div class="form-group">
													<label class="font-weight-700 font-size-16" for="txtcompanyname">Company Name</label>
													<input type="text" class="form-control" id="txtcompanyname" />
												</div>
											</div>

										</div>
									</div>
									<div class="form-actions mt-10">
										<input type="button" class="btn btn-primary" id="btnSave" onclick="Savevendor()" value="Save" />
										<input type="button" class="btn btn-danger" value="Clear" onclick="ClearAllField()" />
									</div>
								</form>
								<div class="table-responsive rounded card-table">
									<table class="table border-no" id="example1">
										<thead>
											<tr>
												<th style="display:none">id</th>
												<th>Vendor name</th>
												<th>Vendor email</th>
												<th>Vendor mobileno</th>
												<th>Vendor address</th>
												<th>Company name</th>
												<th>Edit</th>
												<th>Delete</th>
											</tr>
										</thead>
										<tbody class="tbodyData">
										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>
			<!--/ Content-->
			<!--/ Content-->
		</div>
	</div>
	<script src="@Url.Content("~/js/Admin/Vendor.js")"></script>
	<script type="text/javascript">
		ShowDataInTable();
	</script>
</body>
</html>