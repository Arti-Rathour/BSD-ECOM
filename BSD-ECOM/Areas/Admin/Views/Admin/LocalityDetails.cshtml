@{
    ViewData["Title"] = "LocalityDetails";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div class="content-wrapper">
        <div class="container-full">
            <div class="content-header">
                <div class="d-flex align-items-center">
                    <div class="mr-auto">
                        <h3 class="page-title">LOCALITY DETAILS</h3>
                        <div class="d-inline-block align-items-center">
                            <nav>
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#"><i class="mdi mdi-home-outline"></i></a></li>
                                    <li class="breadcrumb-item" aria-current="page">LOCALITY DETAILS</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!--Main content-->
            <section class="content">
                <div class="row">
                    <div class="col-12">
                        <div class="box">
                            <div class="box-body">
                                <form action="#">
                                    <div class="form-body">
                                        <input type="hidden" id="id" value="0" />
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label class="font-weight-700 font-size-16">Name</label>
                                                    <input type="text" class="form-control" id="txtName" placeholder="Name" name="Name" />
                                                    <div class="error"></div>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label class="font-weight-700 font-size-16">Contact Name</label>
                                                    <input type="text" class="form-control" id="txtcontact_name" placeholder="contact Name" name="contact_name" />
                                                    <div class="error"></div>
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div class="form-group">
                                                    <label class="font-weight-700 font-size-16">Mobile No</label>
                                                    <input type="text" class="form-control" id="txtmobile_no" placeholder="mobileno" name="mobile_no" />
                                                    <div class="error"></div>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label class="font-weight-700 font-size-16">Pincode</label>
                                                    <input type="text" class="form-control" id="txtpincode" placeholder="Pincode" name="pincode" />
                                                    <div class="error"></div>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label class="font-weight-700 font-size-16">Address</label>
                                                    <input type="text" class="form-control" id="txtLoc_address" placeholder="Localddress" name="Loc_address" />
                                                    <div class="error"></div>
                                                </div>
                                            </div>

                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label class="font-weight-700 font-size-16">Phone</label>
                                                    <input type="text" class="form-control" id="txtphone" placeholder="phone" name="phone" />
                                                    <div class="error"></div>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label class="font-weight-700 font-size-16">LocalType</label>
                                                    @*<input type="text" class="form-control" id="txtLoc_id" placeholder="LocalType" name="Loc_id" />*@
                                                    <select id="ddlLocalType" class="form-control" tabindex="1" name="Loc_id">
                                                        <option value="0">Select LocalType</option>
                                                        @if (ViewBag.LocalType != null)
                                                        {
                                                            foreach (var item in ViewBag.LocalType as List<SelectListItem>)
                                                            {
                                                                <option value="@item.Value">@item.Text</option>
                                                            }
                                                        }
                                                    </select>
                                                    <div class="error"></div>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label class="font-weight-700 font-size-16">Image</label>
                                                    <input type="file" class="form-control" id="imagefile" name="img" />
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <img id="img" src="~/images/dummy-pic.png" alt="your image" width="75" height="80" />
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">

                                                    <label class="font-weight-700 font-size-16">Status</label>
                                                    <input type="checkbox" id="chkStatus" checked  name="loc_status"/>Active
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="font-weight-700 font-size-16">Content</label>
                                                    <textarea id="txtContent" class="ckeditor" name="content" rows="100"></textarea>

                                                </div>
                                            </div>
                                        </div>
                                        @*<div class="row">
                </div>*@
                                    </div>
                                    <div class="form-actions mt-10">
                                        <input type="button" class="btn btn-primary" id="btnSave"  onclick="Save()" value="Save" />
                                        <input type="button" class="btn btn-danger" value="Clear" onclick="Clear()" />
                                    </div>
                                </form>
                                <div class="table-responsive rounded card-table">
                                    <table class="table border-no" id="example1">
                                        <thead>
                                            <tr>
                                                <th style="display:none">id</th>
                                                <th>Name</th>
                                                <th>Contact Name</th>
                                                <th>Image</th>
                                                <th>Content</th>
                                                <th>Pincode</th>
                                                <th>Loc Address</th>
                                                <th>MobileNo</th>
                                                <th>Phone</th>
                                                <th>Loc Type</th>
                                                <th>Status</th>
                                                <th>Edit</th>
                                                <th>Delete</th>
                                            </tr>
                                        </thead>
                                        <tbody class="tbodyData"></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!--/ Content-->
        </div>
    </div>
    <script src="@Url.Content("~/js/Admin/Locality.js")"></script>
    <script>
        ShowDataInTable();
    </script>
</body>
</html>

