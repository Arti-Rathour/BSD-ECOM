
@{
    ViewData["Title"] = "Welfare";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div class="content-wrapper">
        <div class="container-full">
            <div class="content-header">
                <div class="d-flex align-items-center">
                    <div class="mr-auto">
                        <h3 class="page-title">WELFARE</h3>
                        <div class="d-inline-block align-items-center">
                            <nav>
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#"><i class="mdi mdi-home-outline"></i></a></li>
                                    <li class="breadcrumb-item" aria-current="page">WELFARE</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!--Main content-->
            <section class="content">
                <div class="row">
                    <div class="col-12">
                        <div class="box">
                            <div class="box-body">
                                <form action="#">
                                    <div class="form-body">
                                        <input type="hidden" id="id" value="0" name="id"/>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="font-weight-700 font-size-16">Welfare Name</label>
                                                <input type="text" class="form-control" id="txtWelfare_Name" name="Welfare_Name" placeholder="Welfare Name" />
                                                <div class="error"></div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="font-weight-700 font-size-16">ContactNo</label>
                                                <input type="text" class="form-control" id="txtcontactNo" name="contactNo" placeholder="Contact No." />
                                                <div class="error"></div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="font-weight-700 font-size-16">Email</label>
                                                <input type="text" class="form-control" id="txtEmail" name="Email" placeholder="Email" />
                                                <div class="error"></div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label class="font-weight-700 font-size-16">Image</label>
                                                    <input type="file" class="form-control" id="imagefile" name="img" />
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <img id="img" src="~/images/dummy-pic.png" alt="your image" width="75" height="80" />
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="font-weight-700 font-size-16">Status</label>
                                                    <input type="checkbox" id="chkStatus" checked />Active
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="font-weight-700 font-size-16">Content</label>
                                                    <textarea id="txtContent" class="ckeditor" name="content" rows="200"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    </div>
                                    <div class="form-actions mt-10">
                                        <input type="button" class="btn btn-primary" id="btnSave" onclick="Save()" value="Save" />
                                        <input type="button" class="btn btn-danger" value="Clear" onclick="Clear()" />
                                    </div>
                                </form>
                                <div class="table-responsive rounded card-table">
                                    <table id="example1" class="table border-no">
                                        <thead>
                                            <tr>
                                                <th style="display:none">id</th>
                                                <th>Welfare Name</th>
                                                <th>Image</th>
                                                <th>ContactNo</th>
                                                <th>Email</th>
                                                <th>Content</th>
                                                <th>Status</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody class="tbodyData"></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!--/ Content-->
        </div>
    </div>
    <script src="@Url.Content("~/js/Admin/Welfare.js")"></script>
    <script>
        ShowDataInTable();
    </script>
</body>
</html>
