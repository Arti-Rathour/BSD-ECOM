@model BSD_ECOM.Areas.Admin.Models.AdminLogin
@{
    Layout = null;
    ViewData["Title"] = "AdminLogin";
}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        .header {
            width: 100%;
            min-height: 80px;
            background: #d71513 !important;
            /* background: #00283e !important; */
            float: left;
        }

        .sub-header-1 {
            margin-top: 10px;
        }

        .vndr-lgn {
            text-align: center !important;
        }

        .boxsss1 {
            border: 3px solid #ccc;
            border-radius: 20px;
        }

        .box {
            background: #fff;
            padding: 15px;
            position: relative;
            margin-top: 40px;
        }

        .myvendorbtn {
            background: #00283e !IMPORTANT;
            BORDER-COLOR: #00283E;
            color: #fff;
        }

        .pull-left {
            float: left !important;
        }

        .pull-right {
            float: right !important;
        }

        .box .register-head {
            position: absolute;
            padding: 5px 10px;
            color: #06384f;
            margin-top: -35px;
            border: 1px solid #bdbdbd;
            background: #fff;
        }

        #bg-white .well-lg {
            padding-bottom: 0;
        }

        #bg-white .form-group {
            margin-bottom: 8px;
            position: relative;
            display: -webkit-box;
        }

        #bg-white .form-control {
            border-radius: 0;
            background: #fff;
            height: 28px;
            padding: 3px 12px;
            border-bottom: 1px solid #ccc;
            box-shadow: none;
            border-top: 0;
            border-left: 0;
            border-right: 0;
        }

        .sub-header-1 a {
            color: #fff;
            font-size: 15px;
            font-weight: bold;
            width: 100%;
            text-align: center;
        }

        a {
            text-decoration: none !important;
            font-family: 'Lato', sans-serif;
        }

        .search-box {
            float: left;
            width: 100%;
            /* height: 35px; */
            height: 3.3125rem;
            position: relative;
            box-shadow: 0px 0px 5px #e4ba4d;
            border-radius: 20px;
            margin: 10px 0 10px 0px;
            border: 1px solid #fff;
            background-color: #fff;
        }

        .login-bg {
            background: url(/images/seller_bg.jpg);
            background-size: cover;
            background-repeat: no-repeat;
            /* padding: 150px 0 400px; */
            padding: 50px 0 160px;
        }

        .vndr-lgn h2 {
            margin: 10px 0 50px 0;
        }

        .box .register-head {
            border: 3px solid #bdbdbd !important;
            border-radius: 20px !important;
        }

        h2.title {
            margin-bottom: 20px;
            margin-top: 30px;
            font-weight: 400;
            line-height: 0.8;
            text-transform: uppercase;
            display: inline-block;
            font-size: 30px;
            padding: 10px 10px;
            background: #d71513;
            letter-spacing: -0.02em;
            color: #444;
            border-bottom: 2px solid #444444;
            /* box-shadow: 0px 0px 0px 4px #d71513; */
        }

        .title {
            background-color: transparent !important;
        }

        @@media (max-width: 768px){
h2.title {
    line-height: 0.8;
    margin-bottom: 20px;
    margin-top: 30px;
    line-height: 0.8;
    text-transform: uppercase;
    display: inline-block;
    font-size: 24px;
    padding: 10px 10px;
    background: #FFD600;
    color: #444;
    border: 4px solid #444;
    box-shadow: 0px 0px 0px 3px #ffd600;
}
            .box .register-head {
                position: absolute;
                padding: 5px 10px;
                color: #06384f;
                margin-top: -35px;
                border: 1px solid #bdbdbd;
                background: #fff;
                left: 2px;
            }
            .myvendorbtn {
                background: #00283e !IMPORTANT;
                BORDER-COLOR: #00283E;
                color: #fff;
                margin-left: 15px;
            }
               }
    </style>
</head>
<body>
    <form>
        <div id="bg"></div>
        <header class="header">
            <label id="lblerror"></label>
            <div class="container">
            </div>
        </header>
        <section class=" login-bg">
            <div class="container">
                <div class="row">
                    <div class="col-md-1"></div>
                    <div class="col-md-6 vndr-lgn" id="bg-white">
                        <h2 class="title text-center">Admin Login</h2>
                        <div class="box boxsss1">
                            <h4 class="register-head">PERSONAL INFORMATION</h4>
                            <br />
                            <div class="form-horizontal">
                                <div class="well-lg">
                                    &nbsp;
                                    <div class="form-group">
                                        <input type="text" id="txtEmail" class="form-control" placeholder="Email Address" name="Email" />
                                    </div>
                                    <span id="or">OR</span>
                                    <div class="form-group">
                                        <input type="text" maxlength="10" id="txtmobileno" class="form-control " placeholder="Enter the Mobile no" err="Please Enter Mobile No." onkeypress="return isNumberKey(event)" name="Mob_No" />
                                    </div>
                                    <br>
                                    <div class="form-group">
                                        <input name="password" type="password" id="txtpwd" class="form-control" placeholder="Password" />
                                    </div>
                                    <br />
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <p>
                                                &nbsp;
                                                <a href="" class="pull-left ">Forgot Password </a>
                                            </p>
                                            <span class="pull-left">
                                                New User <a href="">Click here</a>
                                            </span>
                                            <input type="submit" value="Login" id="Button1" class="btn btn-warning pull-right myvendorbtn glyphicon glyphicon-user" formmethod="post" asp-area="Admin" asp-controller="Admin" asp-action="AdminLogin" />
                                            @*<input type="submit" name="Button1" value="Login" onclick="javascript:WebForm_DoPostBackWithOptions(new WebForm_PostBackOptions(&quot;Button1&quot;, &quot;&quot;, true, &quot;&quot;, &quot;&quot;, false, false))" id="Button1" class="btn btn-warning pull-right myvendorbtn glyphicon glyphicon-user">*@
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
            @if (ViewBag.Message != null)
            {
                <script type="text/javascript">
                   window.onload = function () {
                       alert("@ViewBag.Message");
                   };
                </script>
            }
        </section>
    </form>
        <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
